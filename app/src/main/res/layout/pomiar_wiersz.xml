<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3dp">

    <LinearLayout
        android:id="@+id/llRows"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_gray"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/tvPomiarCzas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:background="@color/szary_1"
            android:gravity="center_horizontal"
            tools:text="2022-08-18 20:30:00" />
        <TextView
            android:id="@+id/tvPomiarWartosc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:background="@color/szary_2"
            android:gravity="center_horizontal"
            tools:text="11323L" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ibPomiarSzczegoly"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="48dp"

        android:src="@drawable/ic_pomiar_wiecej"/>
</LinearLayout>